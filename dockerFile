# Backend build stage
FROM node:18-alpine as backend-build

WORKDIR /app/backend

# Copy backend files
COPY backend/package*.json ./
COPY backend/tsconfig.json ./

RUN npm install

COPY backend/ ./

RUN npm run build

# Frontend build stage
FROM node:18-alpine as frontend-build

WORKDIR /app/frontend

# Copy frontend files
COPY frontend/package*.json ./

RUN npm install

COPY frontend/ ./

RUN npm run build

# Production stage
FROM node:18-alpine

WORKDIR /app

# Install backend dependencies
COPY backend/package*.json ./
RUN npm install --only=production

# Copy built backend
COPY --from=backend-build /app/backend/dist ./dist
COPY backend/.env ./                    # âœ… .env dari folder backend
COPY backend/.sequelizerc ./
COPY backend/health-check.js ./

# Install nginx for frontend
RUN apk add --no-cache nginx

# Copy built frontend
COPY --from=frontend-build /app/frontend/dist /var/www/html

# Copy nginx config
RUN echo 'server { \
    listen 80; \
    root /var/www/html; \
    index index.html; \
    location / { \
        try_files \$uri \$uri/ /index.html; \
    } \
    location /api { \
        proxy_pass http://localhost:3000; \
    } \
}' > /etc/nginx/http.d/default.conf

# Expose ports
EXPOSE 80 3000

# Start both services
CMD nginx && node dist/app.js